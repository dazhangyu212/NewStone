<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="@dimen/n10dp"
    >
    <ImageView 
        android:id="@+id/iv_table"
        android:layout_width="@dimen/n80dp"
        android:layout_height="@dimen/n80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/img_loaded_failure"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_table_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10人桌"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
        <TextView 
            android:id="@+id/tv_table_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空闲"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
    </LinearLayout>
	
</LinearLayout>
