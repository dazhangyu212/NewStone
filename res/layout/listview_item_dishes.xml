<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/n10dp"
    >
    <ImageView 
        android:id="@+id/iv_dishes"
        android:layout_width="@dimen/n80dp"
        android:layout_height="@dimen/n80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dish_0"
        android:background="@drawable/img_loaded_failure"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宫保鸡丁"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
        <TextView 
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19元"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
        <TextView 
            android:id="@+id/tv_dish_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是一道闻名中外的汉族传统名菜"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
			android:maxLines="2"
			android:ellipsize="end"            
            />
    </LinearLayout>
	
</LinearLayout>
