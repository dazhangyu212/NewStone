<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="@dimen/n10dp"
    >
    <TextView 
        android:id="@+id/tv_status"
        android:layout_width="@dimen/n80dp"
        android:layout_height="@dimen/n80dp"
        android:textColor="@color/col_red"
        android:text="@string/str_unpaid"
        android:textSize="@dimen/n20sp"
        android:background="@color/col_silver"
        android:gravity="center"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/n5dp"
        >
        <TextView 
            android:id="@+id/tv_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A1"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
        <TextView 
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
            />
        <TextView 
            android:id="@+id/tv_is_charged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未付款"
            android:textSize="@dimen/n18sp"
            android:textColor="@color/col_dark_gray"
			android:maxLines="2"
			android:ellipsize="end"  
			android:visibility="gone"          
            />
    </LinearLayout>
	
</LinearLayout>
